<% posts.each do |post|%>

    <div class= "custom-card-index">

        <div class="custom-card-index__left">
            <div class="custom-card-main__title--small ">
                <%= link_to post.title, post_path(post.id)%>
            </div>
            <div class="custom-card-main__stats">
                <div class= "custom-card-main__stats__item"> <%= post.created_at.strftime('%Y-%m-%d') %>
            </div>
                <div class= "custom-card-main__stats__item"> <%= post.views%> views </div>
            </div>
        </div>
       
       <div class="custom-card-index__right">
        <div class="custom-card-index__actions">
            <%= link_to edit_user_post_path(current_user.id, post.id) do %>
                <%= image_tag("edit_pencil.svg") %>
            <% end %>
        
            <%= link_to user_post_path(current_user.id, post.id), 
                data: {turbo_method: :delete, confirm: "Are you sure you want to delete this post?" } do %>
                <%= image_tag("delete_trash.svg") %>
            <% end %>
        </div>
       </div>

     </div>


<% end %>