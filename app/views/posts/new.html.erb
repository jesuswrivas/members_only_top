<div class="container-fluid w-75">
    <div class="custom-new-post-form">
        <div class="custom-new-post-form__header">
            <h1>Create a new post</h1>
        </div>
    
    
        <%= form_with model: [@user, @new_post] do |form|%>
    
            <div class="row custom-new-post-form__title">
                <div class="custom-post__label"><%= form.label :title, "Title" %></div>
                <%= form.text_field :title %>
            </div>
    
            <div class="row custom-new-post-form__body">
                <div class="custom-post__label"><%= form.label :body, "Post Content" %></div>
                <%= form.text_area :body %>
            </div>

            <div class="row custom-new-post-form__actions">
                <%= form.submit "Submit Post" %>
            </div>
    
        <% end%>
    
    
    </div>
</div>