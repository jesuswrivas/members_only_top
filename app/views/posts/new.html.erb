<div class="container-fluid w-75">
    <div class="custom-new-post-form">
        <div class="custom-new-post-form__header">
            <h1>Create a new post</h1>
        </div>
    
    
        <%= form_with model: [@user, @new_post] do |form|%>
    
            <div class="row custom-new-post-form__title mb-3">
                
                <%= form.text_field :title, placeholder: "Post Title" %>
            </div>
    
            <div class="row custom-new-post-form__body">
                
                <%= form.text_area :body, placeholder: "Write your Post" %>
            </div>

            <div class="row custom-new-post-form__actions mt-3">
                <%= form.submit "Submit Post" %>
            </div>
    
        <% end%>
    
    
    </div>
</div>